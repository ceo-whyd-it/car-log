{
  "mcpServers": {
    "car-log-core": {
      "command": "python",
      "args": [
        "-m",
        "mcp_servers.car_log_core"
      ],
      "env": {
        "DATA_PATH": "~/Documents/MileageLog/data",
        "USE_ATOMIC_WRITES": "true"
      }
    },
    "trip-reconstructor": {
      "command": "python",
      "args": [
        "-m",
        "mcp_servers.trip_reconstructor"
      ],
      "env": {
        "GPS_WEIGHT": "0.7",
        "ADDRESS_WEIGHT": "0.3",
        "CONFIDENCE_THRESHOLD": "70"
      }
    },
    "validation": {
      "command": "python",
      "args": [
        "-m",
        "mcp_servers.validation"
      ],
      "env": {
        "DISTANCE_VARIANCE_PERCENT": "10",
        "CONSUMPTION_VARIANCE_PERCENT": "15",
        "DEVIATION_THRESHOLD_PERCENT": "20",
        "DIESEL_MIN_L_PER_100KM": "5",
        "DIESEL_MAX_L_PER_100KM": "15",
        "GASOLINE_MIN_L_PER_100KM": "6",
        "GASOLINE_MAX_L_PER_100KM": "20",
        "LPG_MIN_L_PER_100KM": "8",
        "LPG_MAX_L_PER_100KM": "25"
      }
    },
    "ekasa-api": {
      "command": "python",
      "args": [
        "-m",
        "mcp_servers.ekasa_api"
      ],
      "env": {
        "EKASA_API_URL": "https://ekasa.financnasprava.sk/mdu/api/v1/opd/receipt",
        "MCP_TIMEOUT_SECONDS": "60"
      }
    },
    "geo-routing": {
      "command": "node",
      "args": [
        "mcp-servers/geo-routing/index.js"
      ],
      "env": {
        "OSRM_BASE_URL": "https://router.project-osrm.org",
        "NOMINATIM_BASE_URL": "https://nominatim.openstreetmap.org",
        "CACHE_TTL_HOURS": "24"
      }
    },
    "dashboard-ocr": {
      "command": "python",
      "args": [
        "-m",
        "mcp_servers.dashboard_ocr"
      ],
      "env": {
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
      }
    }
  }
}
