# Car Log Docker Environment Variables
# Copy this file to .env and update with your values

# ============================================
# ANTHROPIC API (Required for Dashboard OCR)
# ============================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# car-log-core (CRUD Operations)
# ============================================
DATA_PATH=/data
USE_ATOMIC_WRITES=true

# ============================================
# trip-reconstructor (Template Matching)
# ============================================
GPS_WEIGHT=0.7
ADDRESS_WEIGHT=0.3
CONFIDENCE_THRESHOLD=70

# ============================================
# validation (Data Validation)
# ============================================
DISTANCE_VARIANCE_PERCENT=10
CONSUMPTION_VARIANCE_PERCENT=15
DEVIATION_THRESHOLD_PERCENT=20

# Diesel efficiency range (L/100km)
DIESEL_MIN_L_PER_100KM=5
DIESEL_MAX_L_PER_100KM=15

# Gasoline efficiency range (L/100km)
GASOLINE_MIN_L_PER_100KM=6
GASOLINE_MAX_L_PER_100KM=20

# LPG efficiency range (L/100km)
LPG_MIN_L_PER_100KM=8
LPG_MAX_L_PER_100KM=25

# ============================================
# ekasa-api (Slovak Receipt System)
# ============================================
EKASA_API_URL=https://ekasa.financnasprava.sk/mdu/api/v1/opd/receipt
MCP_TIMEOUT_SECONDS=60

# ============================================
# geo-routing (OpenStreetMap Integration)
# ============================================
OSRM_BASE_URL=https://router.project-osrm.org
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org
CACHE_TTL_HOURS=24

# ============================================
# Notes
# ============================================
# - No API keys required for e-Kasa (public endpoint)
# - No API keys required for OpenStreetMap (respect rate limits)
# - ANTHROPIC_API_KEY only needed if using dashboard OCR (P1 feature)
# - All L/100km values follow European standard (not km/L)
