FROM node:18-slim

LABEL maintainer="Car Log Team"
LABEL description="Geo-routing MCP server (OpenStreetMap integration)"
LABEL version="1.0"

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (production only)
RUN npm ci --only=production

# Copy source code
COPY index.js .

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD node -e "process.exit(0)"

# Start the MCP server
CMD ["node", "index.js"]
